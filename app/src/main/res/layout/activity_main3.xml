<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="416dp"
            android:layout_height="60dp"
            android:background="#009688"
            android:text="TeleMath"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <ImageButton
            android:id="@+id/historial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:translationX="350dp"
            android:translationY="-50dp"
            android:onClick="historialBoton"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

        <ImageButton
            android:id="@+id/retroceder2"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#05FFFFFF"
            android:translationY="-80dp"
            android:onClick="retroceder2"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <EditText
            android:id="@+id/editA"
            android:layout_width="89dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="number"
            android:hint="0"
            android:translationX="300dp" />

        <EditText
            android:id="@+id/editB"
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="number"
            android:hint="0"
            android:translationX="300dp"
            android:translationY="30dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="368dp"
            android:translationX="60dp"
            android:translationY="100dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="7" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="8"
                    android:translationX="20dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="9"
                    android:translationX="30dp" />

                <Button
                    android:id="@+id/buttons"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="/"
                    android:translationX="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationY="30dp">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="4" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="5"
                    android:translationX="20dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="6"
                    android:translationX="30dp" />

                <Button
                    android:id="@+id/buttona"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="*"
                    android:translationX="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationY="60dp">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="1" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="2"
                    android:translationX="20dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="3"
                    android:translationX="30dp" />

                <Button
                    android:id="@+id/buttonm"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="-"
                    android:translationX="50dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationY="90dp">

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="CLR"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="0"
                    android:textSize="14sp"
                    android:translationX="20dp" />

                <Button
                    android:id="@+id/buttoni"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="="
                    android:onClick="botonigual"
                    android:textSize="14sp"
                    android:translationX="30dp" />

                <Button
                    android:id="@+id/buttonma"
                    android:layout_width="59dp"
                    android:layout_height="54dp"
                    android:background="#8E8686"
                    android:text="+"
                    android:textSize="14sp"
                    android:translationX="50dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>