<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="418dp"
            android:layout_height="60dp"
            android:layout_marginBottom="26dp"
            android:background="#009688"
            android:backgroundTint="#009688"
            android:text="TeleMath"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INDICACIONES"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="340dp"
            android:layout_height="428dp"
            android:translationX="30dp"
            android:translationY="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/indicaciones"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="#ECE5E5"
                    android:backgroundTint="#DBE3E4"
                    android:text="¡Bienvenido a nuestra Calculadora Virtual: TeleMath!
                    Esta calculadora está diseñada para ayudarte a realizar operaciones matemáticas de manera rápida
                    y sencilla. Puedes utilizar los botones numéricos (0-9) para ingresar tus números, selecciona los
                    botones de operación (+, -, *, /) para realizar sumas, restas, multiplicaciones y divisiones
                    respectivamente. Debes usar el botón de igual (=) para obtener el resultado de tu operación, se
                    tiene el botón CLR que borra tu entrada. Además, tenemos una sección “Historial” donde se
                    visualizará los resultados obtenidos."
                    android:textSize="24sp" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/calcularBoton"
            android:layout_width="187dp"
            android:layout_height="43dp"
            android:backgroundTint="#009688"
            android:text="Calcular"
            android:translationX="90dp"
            android:translationY="50dp"
            android:onClick="calcularBoton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>